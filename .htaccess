RewriteEngine On

# Handle Angular/React Router
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Redirect all requests to index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Security - Hide .env files
<Files ".env*">
    Order allow,deny
    Deny from all
</Files>

# Security - Hide config files
<Files "*.config">
    Order allow,deny
    Deny from all
</Files> 